                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.7"
                    android:orientation="vertical" />

                <RelativeLayout
                    android:id="@id/id_llyout_b_6"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2.0"
                    android:orientation="vertical">

                    <Button
                        android:id="@id/id_b_6"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/usergroup_button_tv_num_marginTop"
                        android:background="@drawable/use_group_6_normal"
                        android:gravity="center"
                        android:textAllCaps="false"
                        android:textColor="@color/text_color_user_group_name"
                        android:textSize="@dimen/usergroup_button_tv_name_size" />

                    <TextView
                        android:id="@id/id_tv_name_6"
                        android:layout_width="@dimen/usergroup_button_layout_width"
                        android:layout_height="@dimen/usergroup_button_tv_name_height"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/usergroup_button_tv_name_marginTop"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/six"
                        android:textColor="@color/text_color_user_group_name"
                        android:textSize="@dimen/usergroup_button_tv_name_size" />
                </RelativeLayout>

                <View
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.0"
                    android:orientation="vertical" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_gravity="center"
        android:orientation="vertical" />
    <Button
        android:text="@string/setting"
        android:id="@+id/bt_setting"
        android:layout_width="250sp"
        android:layout_height="60sp"
        android:layout_marginBottom="20sp"
        android:background="@drawable/btn_highset_selector"
        android:textAllCaps="false"
        android:textColor="@color/text_color_hightset_normal"
        android:textSize="18.0sp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>
